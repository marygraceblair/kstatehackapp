using Toybox.WatchUi as Ui;
using Toybox.System as Sys;
using Time_Piece_Care_HelpView; 
using Time_Piece_Care_MeView; 

class Time_Piece_CareMenuDelegate extends Ui.MenuInputDelegate {

    function initialize() {
        MenuInputDelegate.initialize();
    }

    function onMenuItem(item) {
        if (item == :item_1) {
            Sys.println("item 1");
            Ui.pushView(new Time_Piece_Care_MeView(), null, Ui.SLIDE_UP);
            
            
            
        } else if (item == :item_2) {
            Sys.println("hello");
            Ui.pushView(new Time_Piece_Care_HelpView(), null, Ui.SLIDE_UP);
            
        }
    }

}